{
  "name": "milestone-site-1",
  "version": "1.0.0",
  "description": "Milestone Automation Solutions is a leading provider of cutting-edge automation and industrial control solutions. Explore our website to discover innovative products and services for optimizing your industrial processes.",
  "main": "script.js",
  "browserslist": "last 2 versions, > 0.5%",
  "scripts": {
    "build:sass": "sass src/assets/sass:public/css",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:css": "onchange \"public/css/*.css\" -- npm run autoprefixer",
    "watch:sass": "sass --watch src/assets/sass:public/css",
    "watch:typescript": "tsc -w",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "build:typescript": "tsc",
    "postbuild": "npm run autoprefixer && postcss public/css/*.css -u cssnano -r --no-map",
    "autoprefixer": "postcss public/css/*.css -u autoprefixer -r",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaren-aras/milestone-site-1.git"
  },
  "keywords": [],
  "author": "Aaren Arasaratnam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aaren-aras/milestone-site-1/issues"
  },
  "homepage": "https://github.com/aaren-aras/milestone-site-1#readme",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/bootstrap": "^5.2.8"
  }
}
